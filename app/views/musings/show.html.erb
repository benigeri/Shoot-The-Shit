  <div class="musing">
    <div class="title">
      <%= @musing.title %>
    </div>
    <h3>
      Votes: <%= @musing.votecount %>
      <% if current_user && current_user.votes.where(:musing_id => @musing.id, :up => true).present? %>
      <% else %>
        <%= link_to "Sick", votes_path(:vote => {:musing_id => @musing.id, :up => true}), { :class => "button-positive button", :method => 'post'} %>
      <% end %>

      <% if current_user && current_user.votes.where(:musing_id => @musing.id, :up => false).present? %>
      <% else %>
        <%= link_to "Shit", votes_path(:vote => {:musing_id => @musing.id, :up => false}), { :class => "button-negative button", :method => 'post'} %>
      <% end %>
    </h3>

    <div class="byline">
      <span class="musingAuthor">
         by <%= u = User.find(@musing.user_id); link_to u.username, u  %>
      </span>
      <span class="musingDate">
        on <%= l @musing.created_at, :format => "%d/%m/%y at %I:%M %p" %>
      </span>
      <% if @musing.city? %>
        <span class="musingCity">
          near <%= @musing.city %>
        </span>
      <% end %>
    </div>
    <p>
      <%= @musing.content %>
    </p>
  </div>

  <h2 class="commentsTitle">Comments:</h2>
    <% @musing.comments.each do |comment| %>
      <div class="comment">
        <p>
          <span>
            <%= u = User.find(comment.user_id); link_to u.username, u %>:<br />
          </span>
          <%= comment.content %>
        </p>
      </div>
    <% end %>

  <div class="add_comment">
  <%= form_for(@comment) do |f| %>
    <% if @comment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

        <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>

<div class="bar-tab">
      <div class="field comment_input_wrapper">

      <%#= f.label :content %><br />
      <%= f.text_field :content, :class => "comment_input", :placeholder => "Add a comment" %>
      <%= f.hidden_field :musing_id, :value => @musing.id %>

    </div>
    <div class="actions comment_actions">
      <%= link_to_function "Post", "document.getElementById('new_comment').submit();", :class => "button-positive block-button post_comment" %>
    </div>
</div>
<% end %>
